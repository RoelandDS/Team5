<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <script src="javascripts/angular.min.js"></script>
  <script src="javascripts/angular-ui-router.min.js"></script>
  <script src="javascripts/app.js"></script>
  <script src="javascripts/states.js"></script>
  <script src="javascripts/factories.js"></script>
  <script src="javascripts/controllers.js"></script>

  <title>Stap 1 Team 5</title>

  <body ng-app="hackthefuture" ng-controller="MainCtrl">
    <ui-view></ui-view>

    <script type="text/ng-template" id="/home.html">
      <a href="#/stap1">Stap 1</a>
      <a href="#/stap2">Stap 2</a>
    </script>

    <script type="text/ng-template" id="/stap1.html">
      <title>Stap 1 Team 5</title>

      <h1>Stap 1: Hue Lamp</h1><br/>
      <button ng-click="turnOff()">Turn off</button>
      <button ng-click="turnOn()">Turn on</button><br/>
      <button ng-click="red()">Rood</button>
      <button ng-click="yellow()">Geel</button>
      <button ng-click="blue()">Blauw</button>
      <button ng-click="green()">Groen</button><br />
      <a href="#/home">Terug</a>
    </script>
    <script type="text/ng-template" id="/stap2.html">
      <h1>Stap 2: Registratie</h1>
      Teamnaam: <input ng-model='teamname'></input><br/>
      Naam eerste lid: <input ng-model='firstTeam'></input><br/>
      Naam tweede lid: <input ng-model='secondTeam'></input><br/>
      <button ng-click="register()">Registreer</button><br />
      <a href="#/home">Terug</a>
    </script>
  </body>
</head>
</html>
